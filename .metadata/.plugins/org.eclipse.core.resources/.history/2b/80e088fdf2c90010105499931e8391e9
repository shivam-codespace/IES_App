package in.banking.aap.service;

import lombok.RequiredArgsConstructor;

import org.springframework.data.domain.PageRequest;
import org.springframework.data.domain.Pageable;
import org.springframework.data.domain.Slice;
import org.springframework.data.domain.Sort;
import org.springframework.stereotype.Service;

import in.banking.aap.entity.Account;
import in.banking.aap.entity.Card;
import in.banking.aap.entity.Status;
import in.banking.aap.entity.Transaction;
import in.banking.aap.entity.Type;
import in.banking.aap.entity.User;
import in.banking.aap.repositories.TransactionRepository;

import java.util.List;

@Service
@RequiredArgsConstructor
public class TransactionService {

    private final TransactionRepository transactionRepository;
    
    
    
    

    public TransactionService(TransactionRepository transactionRepository) {
		super();
		this.transactionRepository = transactionRepository;
	}

	// Common pageable generator
    private Pageable buildPageable(int page) {
        return PageRequest.of(
                page,
                10,
                Sort.by("createdAt").ascending()
        );
    }

    public List<Transaction> getAllTransactions(int page, User user) {
        Pageable pageable = buildPageable(page);
        return transactionRepository
                .findAllByOwnerUid(user.getUid(), pageable)
                .getContent();
    }

    public List<Transaction> getTransactionsByCardId(String cardId, int page, User user) {
        Pageable pageable = buildPageable(page);
        return ((Slice<Transaction>) transactionRepository
                .findAllByCardCardIdAndOwnerUid(cardId, user.getUid(), pageable))
                .getContent();
    }

    public List<Transaction> getTransactionsByAccountId(String accountId, int page, User user) {
        Pageable pageable = buildPageable(page);
        return transactionRepository
                .findAllByAccountAccountIdAndOwnerUid(accountId, user.getUid(), pageable)
                .getContent();
    }


    public Transaction createAccountTransaction(
            double amount,
            Type type,
            double txFee,
            User user,
            Account account
    ) {
        Transaction tx = Transaction.builder()
                .amount(amount)
                .txFee(txFee)
                .type(type)
                .status(Status.COMPLETED)
                .owner(user)
                .account(account)
                .build();

        return transactionRepository.save(tx);
    }

    public Transaction createCardTransaction(
            double amount,
            Type type,
            double txFee,
            User user,
            Card card
    ) {
        Transaction tx = Transaction.builder()
                .amount(amount)
                .txFee(txFee)
                .type(type)
                .status(Status.COMPLETED)
                .owner(user)
                .card(card)
                .build();

        return transactionRepository.save(tx);
    }
}
