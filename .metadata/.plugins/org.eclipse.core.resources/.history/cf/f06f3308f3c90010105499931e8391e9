package in.banking.aap.repositories;

import org.springframework.data.domain.Pageable;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import in.banking.aap.entity.Transaction;

@Repository
public interface TransactionRepository extends JpaRepository<Transaction, String>{

	Object findAllByOwnerUid(String uid, Pageable pageable);

	Object findAllByCardCardIdAndOwnerUid(String cardId, String uid, Pageable pageable);

	Object findAllByAccountAccountIdAndOwnerUid(String accountId, String uid, Pageable pageable);

}
